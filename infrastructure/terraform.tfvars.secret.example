# =============================================================================
# SENSITIVE VALUES - COPY TO terraform.tfvars.secret AND FILL IN
# =============================================================================
# DO NOT commit terraform.tfvars.secret to git!

# Vercel API Token (get from https://vercel.com/account/tokens)
vercel_api_token = "YOUR_VERCEL_TOKEN_HERE"

# Namecheap API Credentials (get from https://ap.www.namecheap.com/settings/tools/apiaccess/)
namecheap_user_name = "YOUR_NAMECHEAP_USERNAME"
namecheap_api_user  = "YOUR_NAMECHEAP_USERNAME"  # Usually same as user_name
namecheap_api_key   = "YOUR_NAMECHEAP_API_KEY"

# Cloud Run Environment Variables
env_vars = [
  { name = "NODE_ENV", value = "production" },
  # PORT is reserved by Cloud Run - don't set it
  { name = "DATABASE_URL", value = "postgresql://user:pass@host/db?sslmode=require" },
  { name = "JWT_SECRET", value = "your-jwt-secret-here" },
  # Add other env vars as needed:
  # { name = "R2_ACCOUNT_ID", value = "..." },
  # { name = "R2_ACCESS_KEY_ID", value = "..." },
  # { name = "R2_SECRET_ACCESS_KEY", value = "..." },
  # { name = "R2_BUCKET_NAME", value = "..." },
  # { name = "R2_PUBLIC_URL", value = "..." },
  # { name = "ADMIN_URL", value = "https://your-admin.vercel.app" },
  # { name = "WEB_URL", value = "https://your-web.vercel.app" },
]
