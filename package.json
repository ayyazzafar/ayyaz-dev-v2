{
  "name": "ayyaz-dev-v2",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",

    "tf:init": "cd infrastructure && terraform init",
    "tf:plan": "cd infrastructure && terraform plan -var-file=terraform.tfvars.secret",
    "tf:apply": "cd infrastructure && terraform apply -var-file=terraform.tfvars.secret",
    "tf:apply:auto": "cd infrastructure && terraform apply -auto-approve -var-file=terraform.tfvars.secret",
    "tf:destroy": "cd infrastructure && terraform destroy -var-file=terraform.tfvars.secret",
    "tf:output": "cd infrastructure && terraform output",
    "tf:fmt": "cd infrastructure && terraform fmt",
    "tf:validate": "cd infrastructure && terraform validate",

    "vercel:list": "vercel list --scope ayyaz-tech-hobby",
    "vercel:list:web": "vercel list ayyaz-dev-v2-web --scope ayyaz-tech-hobby",
    "vercel:list:admin": "vercel list ayyaz-dev-v2-admin --scope ayyaz-tech-hobby"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "prettier": "^3.7.4",
    "prisma": "6",
    "turbo": "^2.7.1",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@prisma/client": "6"
  }
}
